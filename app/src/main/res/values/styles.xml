<resources>

    <!-- Base application theme. -->

    <style name="Base.AppTheme" parent="Theme.MaterialComponents.Light">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="actionBarTheme">@style/ThemeOverlay.Tasky.ActionBar</item>
    </style>
    <style name="AppTheme" parent="Base.AppTheme">

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

    </style>

    <style name="Style.Tasky.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ThemeOverlay.Tasky.ActionBar" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:background">@android:color/white</item>

        <item name="android:titleTextStyle">@style/TextAppearance.Tasky.Title.Centered</item>
    </style>

    <style name="TextAppearance.Tasky.Title.Centered" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>
